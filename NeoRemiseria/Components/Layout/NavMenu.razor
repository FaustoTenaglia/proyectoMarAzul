</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>

        <div>
            <NavLink class="nav-link" href="moviles">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="ture"></span> Móviles
            </NavLink>
        </div>
        <div>
            <NavLink class="nav-link" href="modelo">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="ture"></span> Modelos
            </NavLink>
        </div>
        <div>
            <NavLink class="nav-link" href="marcas">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="ture"></span> Marcas
            </NavLink>
        </div>
    </nav>
</div>

<button class="btn btn-dark toggle-btn" @onclick="ToggleSidebar">
    <i class="bi bi-list"></i>
</button>

<div class="@SidebarClass" id="nav-scrollable">
    <!-- Sidebar content -->
</div>

<div class="@MainContentClass" id="flex-column">
    <!-- Main content -->
</div>

@code {
    private bool isSidebarCollapsed = false;

    private string SidebarClass => isSidebarCollapsed ? "nav-scrollable collapsed" : "nav-scrollable";
    private string MainContentClass => isSidebarCollapsed ? "flex-column collapsed" : "flex-column";

    private void ToggleSidebar()
    {
        isSidebarCollapsed = !isSidebarCollapsed;
    }
}